/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: solid 5rpx white;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}


.mycontainer{
  padding:0 0;
  background-color: #eeeeee;
  height:1300rpx;
}
.my-scroll{
  height:100%;
  width:100%;
}
.foot-view{
  height:300rpx;
}
.order-view{
  margin-top:50rpx;
  width:88%;
  background-color: white;
  padding:10rpx 3%;
  padding-top:30rpx;
  margin-left:3%;
  margin-right:3%;
  margin-bottom:50rpx;
}
.no_time_view{
  width:100%;
  padding-bottom:20rpx;
  border-bottom:solid 1rpx #eee;
}
.no-view{
  font-size:30rpx;
  font-weight:400;
}
.time-view{
  font-size:25rpx;
  font-weight:350;
  color:#8e8e8e;
  margin-top:5rpx;
}
.ticket-view{
  width:100%;
  padding-bottom:10rpx;
  border-bottom:solid 1rpx #eee;
  display:flex;
}
.ticket-img-view{
  padding-left:3%;
  width:22%;
}
.ticket-img{
  width:135rpx;
  height:135rpx;
  margin-top:15rpx;
}
.ticket-name-view{
  font-size:30rpx;
  font-weight:400;
  margin-top:15rpx;
}
.ticket-num-view{
  font-size:30rpx;
  font-weight:400;
}
.ticket-date-view{
  font-size:30rpx;
  font-weight:400;
}
.flag-view{
  width:100%;
  padding-bottom:10rpx;
  border-bottom:solid 1rpx #eee;
  display:flex;
}
.flag-icon-view{
  margin-left:5%;
  width:10%;
  padding-top:20rpx;
}
.flag-info-view{
  width:35%;
  font-size:30rpx;
  font-weight:400;
  padding-top:20rpx
}
.flag-tip-view{
  font-size:24rpx;
  font-weight:400;
  padding-top:25rpx;
}
.refund-view-1{
  padding-left:60%;
  width:35%;
  border-bottom:solid 1rpx #eee;
  display:flex;
  padding-top:20rpx;
  padding-bottom:20rpx;
}
.btn-refund{
  width:70%;
  background-color: white;
  height:60rpx;

  font-size:24rpx;
  font-weight:400;
}
.refund-info-view{
  font-size:30rpx;
  font-weight:400;
  margin-left:40rpx;
  padding:20rpx 0;
}
.total-view{
  width:100%;
  padding-bottom:10rpx;
}
.total-info-view{
  margin-left:5%;
  width:95%;
  font-size:30rpx;
  font-weight:400;
  padding-top:20rpx;
  display:flex;
}
.total-info-title-view{
  width:85%;
}
.total-info-num-view{
  width:15%;
  font-size:32rpx;
  font-weight:500;
  color:#f8572e;
}
.look-more-view{
  padding-left:50%;
  width:45%;
  border-bottom:solid 1rpx #eee;
  display:flex;
  padding-top:20rpx;
  padding-bottom:20rpx;
}

.my-info-view{
  background-color: #fd8f5b;
  width:100%;
  height:400rpx;
  padding-top:50rpx;
}
.name-avatar-view{
  width:95%;
  padding-left:5%;
  display:flex;
}
.name-view{
  font-size:60rpx;
  color:white;
  font-weight:500;
  width:70%;
  padding-top:40rpx;
}
.avatar-view{
  width:30%;
}
.my-num-view{
  width:90%;
  padding:0 5%;
  display:flex;
}
.my-score-view{
  width:20%;
  border-right:solid 1rpx white;
}
.my-score-data-view{
  font-size:60rpx;
  color:white;
  font-weight:500;
}
.my-score-title-view{
  font-size:30rpx;
  color:white;
  font-weight:400;
}
.my-code-view{
  margin-left:10%;
}
.my-code-data-view{
  font-size:60rpx;
  color:white;
  font-weight:500;
}
.my-code-title-view{
  font-size:30rpx;
  color:white;
  font-weight:400;
}