/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}


.mycontainer{
  padding:0 0;
  background-color: #ffffff;
  height:1300rpx;
}
.my-scroll{
  height:100%;
  width:100%;
}
.room-img-view{
  height:40%;
  width:100%;
}
.room-image{
  width:100%;
  height:100%;
}
.info-view{
  background-color:#222222;
  color:white;
  font-size:40rpx;
  height:13%;
  position:absolute;
  opacity: 0.5;
  width:100%;
  top:24%;
  font-weight:500;
  padding-top:35rpx;
  padding-left:40rpx;
}
.addr-view{
  margin-top:15rpx;
}
.time-select-view{
  padding-top:30rpx;
}
.time-title{
  font-weight:400;
  font-size:30rpx;
  margin-left:30rpx;
}
.time-select{
  width:96%;
  margin-left:2%;
  padding-top:25rpx;
  padding-bottom:10rpx;
}
.time-select-half{
  width:94%;
  margin-left:4%;
  margin-right:4%;
  padding-top:25rpx;
  padding-bottom:10rpx;
  border-bottom: 5rpx solid #fd7e37
}
.time-picker{
  display:flex;
}
.picker-inner-view{
  display:flex;
  width:750rpx;
}
.left-img-view{
  width:75rpx;
}
.picker{
  font-weight:300;
  font-size:26rpx;
  margin-left:60rpx;
  padding-top:15rpx;
  width:500rpx;
}
.picker-icon{
  width:65rpx;
  height:65rpx;
  padding-left:10rpx;
  padding-right:10rpx;
}
.picker-icon-tiny{
  width:30rpx;
  height:20rpx;
  margin-top:20rpx;
}



.taocan-block-view{
  width:92%;
  padding: 30rpx 4%;
  background-color: #eeeeee;
  height:100%;
}
.taocan-view{
  width:92%;
  margin: 30rpx 4%;
  border:1rpx solid #9f9999;
  background-color: white;
  padding-top:30rpx;
}
.taocan-name-view{
  margin-left:30rpx;
  font-size:32rpx;
  font-weight:500;
}
.taocan-price-view{
  display:flex;
}
.taocan-old-price-view{
  text-decoration: line-through;
  font-size:25rpx;
  font-weight:400;
  color:#707070;
  margin-left:40rpx;
  padding-top:5rpx;
}
.taocan-new-price-view{
  font-size:32rpx;
  font-weight:500;
  color:#f8572e;
  margin-left:20rpx;
}
.taocan-rule-view{
  margin-left:4%;
}

.rule-view{
  width:92%;
  margin: 30rpx 4%;
  padding-bottom:20rpx;
  border-bottom:1rpx solid #afafaf;
  
}
.rule{
  width:100%;
  display:flex;
}
.rule-text{
  width:98%;
  font-size:25rpx;
  font-weight:350;
  margin-bottom:20rpx;
  padding-top:15rpx;
}

.head-view{
  width:100%;
  display:flex;
}
.left-view{
  width:75%;
}
.right-view{
  width:25%;
}

.label{
  padding:5rpx 5rpx;
  margin-right:5%;
  border: 1rpx solid #fd7e37;
  display: flex;
  justify-content: center;
  width:90rpx;
  height:40rpx;
  color:#fd7e37;
  margin-top:10rpx;
}
.label-text{
  font-weight:300;
  color:#f8572e;
  font-size:25rpx;
}